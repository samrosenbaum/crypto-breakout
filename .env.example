# Application
APP_ENV=development
LOG_LEVEL=INFO
DEBUG=True

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/crypto_signals
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600  # 1 hour

# API Keys - Data Sources
COINGECKO_API_KEY=your_coingecko_api_key
COINMARKETCAP_API_KEY=your_cmc_api_key
DEXTOOLS_API_KEY=your_dextools_api_key

# Blockchain Explorers
ETHERSCAN_API_KEY=your_etherscan_key
BSCSCAN_API_KEY=your_bscscan_key
POLYGONSCAN_API_KEY=your_polygonscan_key
ARBISCAN_API_KEY=your_arbiscan_key
SOLSCAN_API_KEY=your_solscan_key

# Web3 RPC Endpoints
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your_key
BSC_RPC_URL=https://bsc-dataseed.binance.org/
POLYGON_RPC_URL=https://polygon-rpc.com/
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Social Media APIs (Optional)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=CryptoSignalScanner/1.0

# News & Sentiment
CRYPTOPANIC_API_KEY=your_cryptopanic_key
LUNARCRUSH_API_KEY=your_lunarcrush_key

# Notifications
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
DISCORD_WEBHOOK_URL=your_discord_webhook_url
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=alerts@crypto-signals.com
EMAIL_TO=your_email@gmail.com

# Monitoring
SENTRY_DSN=your_sentry_dsn
PROMETHEUS_PORT=9090

# Scanner Configuration
SCAN_INTERVAL=300  # 5 minutes
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30
RETRY_ATTEMPTS=3
BACKOFF_FACTOR=2

# Signal Thresholds
MIN_LIQUIDITY_USD=50000  # Minimum liquidity for consideration
MIN_MARKET_CAP_USD=100000  # Minimum market cap
MAX_SLIPPAGE_PERCENT=5  # Maximum acceptable slippage

# Risk Profile (conservative, moderate, aggressive)
DEFAULT_RISK_PROFILE=moderate

# Backtesting
BACKTEST_START_DATE=2024-01-01
BACKTEST_INITIAL_CAPITAL=10000

# Rate Limiting
COINGECKO_RATE_LIMIT=50  # requests per minute
ETHERSCAN_RATE_LIMIT=5  # requests per second
DEXSCREENER_RATE_LIMIT=300  # requests per minute

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
